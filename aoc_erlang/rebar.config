%% -*- erlang -*-

{erl_opts, [ debug_info
           , warnings_as_errors
           ]}.

{pre_hooks,
 [{compile, "make -C c_src"}
 ]}.

{post_hooks,
 [{clean, "make -C c_src clean"}
 ]}.

{ct_opts, [{ct_hooks, [ cth_surefire
                      , cth_plot
                      , cth_timing
                      ]}
          ]}.

{deps, [ {getopt, "1.0.1"}
       , {jsone, "1.5.0"}
       ]}.
