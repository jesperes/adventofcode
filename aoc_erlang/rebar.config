%% -*- erlang -*-

{erl_opts, [ debug_info
           , warnings_as_errors
           ]}.

{deps, [ {getopt, "1.0.1"}
       , {jsone, "1.5.0"}
       ]}.

{relx, [ {release, { aoc_erlang, "0.1.0" }, [aoc_erlang]}
       , {sys_config, "./config/sys.config"}
       , {vm_args, "./config/vm.args"}
       , {dev_mode, true}
       , {include_erts, false}
       , {extended_start_script, true}
       ]}.

{profiles,
 [{prod,
   [{relx, [{dev_mode, false},
            {include_erts, true}]}]
  }]
}.
